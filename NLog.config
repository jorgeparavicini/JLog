<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      internalLogFile="c:\temp\console-example-internal.log"
      internalLogLevel="Info"
      autoReload="true">
    <extensions>
        <add assembly="Unity.UTerm.Editor" />
    </extensions>

    <!-- the targets to write to -->
    <targets>
        <target xsi:type="UnityTerminal" name="unity" tabName="Unity Nlog"
                layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}" />
        <target xsi:type="UnityTerminal" name="unity2" tabName="Errors"/>
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="*" minlevel="Trace" writeTo="unity" />
        <logger name="*" minlevel="Error" writeTo="unity2" />
    </rules>
</nlog>